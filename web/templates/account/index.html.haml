.conatiner
  .row
    .col.s12
      .card.white.black-text
        .card-content
          %span.card-title Listing Accounts
          %table
            %tr
              %th Name
              %th Credit?
              %th Due date (day of month)
              %th Payee Account
              %th Actions
            = for account <- @accounts do
              %tr
                %td= account.name
                %td
                  = if account.credit do
                    %i.material-icons done
                  =end
                %td= account.day_of_month
                %td
                  = if account.payee_account_id do
                    = Dosh.Account.account_name(account.payee_account_id)
                  = end
                %td.text-right
                  = link "Show", to: account_path(@conn, :show, account), class: "btn btn-default"
                  = link "Edit", to: account_path(@conn, :edit, account), class: "btn btn-default"
                  = link "Delete", to: account_path(@conn, :delete, account), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-default"
            = end
